<div class="signup-container" style="max-width: 400px; margin: 60px auto; padding: 20px; font-family: 'Helvetica Neue', sans-serif;">

  <!-- Logo -->
  <div style="text-align: center; margin-bottom: 30px;">
    <%= image_tag 'https://res.cloudinary.com/ds8cccxkn/image/upload/v1750153216/Bookloop_h9v0zf.png', alt: 'BookLoop Logo', style: 'height: 80px;' %>
  </div>

  <!-- Heading -->
  <h2 style="text-align: center; font-size: 24px; font-weight: bold; margin-bottom: 10px;">Create an Account</h2>
  <p style="text-align: center; color: #777; margin-bottom: 30px;">Join BookLoop today</p>

  <!-- Sign Up Form -->
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <!-- Username -->
    <div style="margin-bottom: 20px;">
      <%= f.label :username, "Username", style: "display: block; margin-bottom: 5px;" %>
      <%= f.text_field :username, autocomplete: "username", class: "form-control", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
    </div>

    <!-- Email -->
    <div style="margin-bottom: 20px;">
      <%= f.label :email, "Email", style: "display: block; margin-bottom: 5px;" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
    </div>

    <!-- Password -->
    <div style="margin-bottom: 20px;">
      <%= f.label :password, "Password", style: "display: block; margin-bottom: 5px;" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
    </div>

    <!-- Password Confirmation -->
    <div style="margin-bottom: 25px;">
      <%= f.label :password_confirmation, "Password confirmation", style: "display: block; margin-bottom: 5px;" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
    </div>

    <!-- Submit Button -->
    <div style="text-align: center;">
      <%= f.submit "Sign up", class: "btn btn-dark", style: "padding: 10px 20px; background-color: rgb(91, 11, 11); color: white; border: none; border-radius: 5px; cursor: pointer;" %>
    </div>
  <% end %>

  <!-- Log in Link -->
  <div style="text-align: center; margin-top: 20px;">
    <p style="color: #777;">Already have an account?
      <%= link_to "Log in", new_user_session_path, style: "color:rgb(91, 11, 11); text-decoration: none;" %>
    </p>
  </div>

</div>
