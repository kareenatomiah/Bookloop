<div class="min-h-screen flex flex-col justify-center items-center bg-white px-4 py-12">
  <%= image_tag 'https://res.cloudinary.com/ds8cccxkn/image/upload/v1750153216/Bookloop_h9v0zf.png', alt: 'BookLoop Logo', class: 'h-20 mb-6' %>

  <h2 class="text-2xl font-bold mb-2 text-gray-800">Create an Account</h2>
  <p class="text-gray-500 mb-6">Join BookLoop today</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'w-full max-w-sm' }) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, autofocus: true, class: "w-full px-4 py-2 border border-gray-300 rounded-md" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password, class: "w-full px-4 py-2 border border-gray-300 rounded-md" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= f.submit "Sign up", class: "w-full bg-indigo-600 text-white py-2 rounded-md hover:bg-indigo-700 transition" %>
    </div>
  <% end %>

  <p class="mt-6 text-sm text-gray-600">
    Already have an account?
    <%= link_to "Log in", new_user_session_path, class: "text-indigo-600 hover:underline" %>
  </p>
</div>
