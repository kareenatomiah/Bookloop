<style>
  /* ===== Your CSS Styles ===== */
  .profile-header-bg {
    position: relative;
    width: 100vw;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;

    height: 180px;
    background: linear-gradient(135deg, #a63333 0%, #5c1a1a 100%);
    border-bottom-left-radius: 70px;
    border-bottom-right-radius: 70px;
    box-shadow: 0 4px 15px rgba(166, 51, 51, 0.5);
    z-index: -1;
  }

  .avatar-wrapper {
    position: absolute;
    top: 110px;
    left: 50%;
    transform: translateX(-50%);
    width: 160px;
    height: 160px;
    border-radius: 50%;
    border: 5px solid #fff;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    box-shadow: 0 8px 20px rgba(0,0,0,0.15);
  }

  .avatar-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* User info */
  .user-info {
    margin-top: 100px;
    text-align: center;
    font-family: 'Helvetica Neue', Arial, sans-serif;
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
  }

  .user-name {
    margin-top: 20px;
    font-weight: 700;
    font-size: 28px;
    color: #2c2c2c;
    letter-spacing: 0.03em;
  }

  .user-bio {
    color: #555;
    font-size: 17px;
    margin: 8px 0 15px;
    font-style: italic;
  }

  .user-location {
    color: #a63333;
    font-size: 15px;
    font-weight: 500;
  }

  .user-location i {
    margin-right: 7px;
  }

  /* Stats */
  .user-stats {
    display: flex;
    justify-content: center;
    gap: 40px;
    margin: 30px 0 40px;
    font-family: 'Helvetica Neue', Arial, sans-serif;
  }

  .stat-item p:first-child {
    font-weight: 700;
    font-size: 22px;
    margin: 0;
    color: #222;
  }

  .stat-item p:last-child {
    font-size: 14px;
    color: #777;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Buttons */
  .user-actions {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 50px;
  }

  .btn {
    background-color: #a63333;
    color: white;
    padding: 12px 28px;
    border-radius: 25px;
    text-decoration: none;
    font-family: 'Helvetica Neue', Arial, sans-serif;
    font-weight: 600;
    cursor: pointer;
    border: none;
    box-shadow: 0 5px 15px rgba(166, 51, 51, 0.4);
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
    user-select: none;
  }

  .btn:hover,
  .btn:focus {
    background-color: #7f2626;
    box-shadow: 0 7px 20px rgba(127, 38, 38, 0.6);
    outline: none;
  }

  /* Tabs */
  nav.tabs {
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
    font-family: 'Helvetica Neue', Arial, sans-serif;
  }

  nav.tabs button {
    font-size: 18px;
    cursor: pointer;
    background: none;
    border: none;
    color: #a63333;
    font-weight: 600;
    padding-bottom: 8px;
    border-bottom: 3px solid #a63333;
    pointer-events: none; /* Disabled since only one tab */
  }

  hr.separator {
    max-width: 320px;
    margin: 0 auto 40px;
    border-color: #f0f0f0;
  }

  /* BeRead posts grid */
  .beread-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 22px;
    padding: 0 24px 40px;
  }

  .beread-article {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 8px 22px rgba(0,0,0,0.07);
    padding: 16px;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    transition: transform 0.3s ease;
  }

  .beread-article:hover {
    transform: translateY(-5px);
  }

  .beread-photo {
    border-radius: 16px;
    width: 100%;
    height: 200px;
    object-fit: cover;
    margin-bottom: 12px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.05);
  }

  .beread-placeholder {
    width: 100%;
    height: 200px;
    background: #eee;
    border-radius: 16px;
    margin-bottom: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ccc;
    font-size: 18px;
    font-style: italic;
  }

  .beread-caption {
    font-size: 15px;
    color: #333;
    text-align: center;
    white-space: pre-wrap;
    margin: 0;
  }

  .beread-date {
    font-size: 13px;
    color: #999;
    margin-top: 10px;
  }

  .delete-button {
    position: absolute;
    top: 12px;
    right: 12px;
    background-color: #a63333;
    color: white;
    border: none;
    padding: 6px 12px;
    border-radius: 12px;
    font-size: 13px;
    cursor: pointer;
    box-shadow: 0 4px 14px rgba(166, 51, 51, 0.5);
    transition: background-color 0.3s ease;
  }

  .delete-button:hover,
  .delete-button:focus {
    background-color: #7f2626;
    outline: none;
  }

  .empty-message {
    text-align: center;
    color: #aaa;
    font-style: italic;
    font-size: 16px;
    margin-top: 60px;
    font-family: 'Helvetica Neue', Arial, sans-serif;
  }
</style>

<div>
  <!-- Header & Avatar -->
  <div class="profile-header-bg">
    <div class="avatar-wrapper" aria-label="User avatar">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar_thumbnail, alt: "#{@user.name.presence || 'User'}'s avatar", class: "avatar-img" %>
      <% else %>
        <i class="fa fa-user" style="font-size: 80px; color: #a63333;" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>

  <!-- User info -->
  <section class="user-info" aria-label="User information">
    <h2 class="user-name"><%= @user.name.presence || "Unnamed User" %></h2>
    <p class="user-bio"><%= @user.bio.presence || "Book lover & explorer" %></p>

    <% if @user.location.present? %>
      <p class="user-location" aria-label="User location">
        <i class="fa fa-map-marker" aria-hidden="true"></i>
        <%= @user.location %>
      </p>
    <% end %>

    <div class="user-stats" role="list" aria-label="User statistics">
      <div class="stat-item" role="listitem">
        <p><%= 0 %></p> <!-- Placeholder for followers -->
        <p>Followers</p>
      </div>
      <div class="stat-item" role="listitem">
        <p><%= 0 %></p> <!-- Placeholder for following -->
        <p>Following</p>
      </div>
      <div class="stat-item" role="listitem">
        <p><%= @user.likes.count %></p>
        <p>Likes</p>
      </div>
      <div class="stat-item" role="listitem">
        <p><%= @user.be_reads.count %></p>
        <p>BeReads</p>
      </div>
    </div>

    <div class="user-actions">
      <% if current_user == @user %>
        <%= link_to "Edit profile", edit_user_registration_path, class: "btn", role: "button" %>
      <% end %>
      <%= link_to "Add friends", "#", class: "btn", role: "button" %>
      <%= link_to "Follow", "#", class: "btn", role: "button" %>
    </div>
  </section>

  <!-- Tabs navigation (single tab now) -->
  <nav class="tabs" role="tablist" aria-label="Profile sections">
    <button
      id="tab-beeread"
      role="tab"
      aria-selected="true"
      aria-controls="content-beeread"
      tabindex="0"
      class="tab-active"
      disabled
    >
      BeReads
    </button>
  </nav>

  <hr class="separator" />

  <!-- BeReads content -->
  <section
    id="content-beeread"
    role="tabpanel"
    aria-labelledby="tab-beeread"
    tabindex="0"
  >
    <% if @user.be_reads.any? %>
      <div class="beread-grid">
        <% @user.be_reads.each do |post| %>
          <article class="beread-article">
            <% if post.photo.attached? %>
              <%= image_tag post.photo, alt: "BeRead post photo", class: "beread-photo" %>
            <% else %>
              <div class="beread-placeholder">No image</div>
            <% end %>
            <p class="beread-caption"><%= post.caption %></p>
            <time class="beread-date"><%= post.created_at.strftime("%b %d, %Y") %></time>
            <% if current_user == @user %>
              <%= button_to "Delete", be_read_path(post), method: :delete, class: "delete-button", data: { confirm: "Are you sure?" } %>
            <% end %>
          </article>
        <% end %>
      </div>
    <% else %>
      <p class="empty-message">No BeReads yet</p>
    <% end %>
  </section>
</div>

<script>
  // No tab switching logic needed now since only one tab exists
</script>
