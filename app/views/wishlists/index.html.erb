<div class="wishlist-header">
<h1 style="
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 2rem auto 0.75rem auto;
  padding: 8px 16px;
  font-size: 1.8rem;
  font-weight: 600;
  color: #7B1E3A;
  font-family: 'Merriweather', serif;
  background-color: #f7e9e9;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(123, 30, 58, 0.15);
  width: fit-content;
">
  <i class="fa-solid fa-heart" style="
    color: #7B1E3A;
    font-size: 1.3rem;
    margin-right: 8px;
    background-color: #fff0f2;
    padding: 4px 6px;
    border-radius: 4px;
  "></i>
  My Wishlist
</h1>



<% if @my_books.any? %>
  <% @my_books.each do |wishlist| %>
    <%= render partial: "books/book_preview", locals: {
      work_data: @book_data[wishlist.work_key][:work_data],
      full_author: @book_data[wishlist.work_key][:full_author],
      reviews: @book_data[wishlist.work_key][:reviews],
      local_metadata: @book_data[wishlist.work_key][:local_metadata],
      work_key: wishlist.work_key
    } %>
  <% end %>
<% else %>
  <p style="text-align: center; color: #888;">Your library is empty.</p>
<% end %>
