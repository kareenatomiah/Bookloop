<div class="book-content">
  <% if work_data["covers"]&.any? %>
    <%= image_tag "https://covers.openlibrary.org/b/id/#{work_data["covers"].first}-M.jpg",
                  alt: work_data["title"] || "Book cover",
                  class: "book-cover" %>
  <% end %>

  <h2 style="font-size: 20px; color: #2c2c2c; margin: 10px 0;">
    <%= work_data["title"] || "Untitled" %>
  </h2>

  <p style="color: #555;"><strong>By:</strong> <%= full_author.presence || "Unknown" %></p>

  <p style="color: #555;"><strong>Category:</strong> <%= local_metadata&.category.presence || work_data["subjects"]&.first || "Unknown" %></p>

  <% if reviews.any? %>
    <p style="color: #444;"><strong>Rating:</strong> <%= average_rating(reviews) %> â˜†</p>
  <% end %>

  <%= link_to "Details", book_path(work_key), class: "btn-review", style: "margin-top: 10px; display: inline-block;" %>
</div>
