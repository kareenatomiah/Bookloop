<div style="max-width: 800px; margin: 40px auto; font-family: 'Helvetica Neue', sans-serif;">

  <!-- Search form -->
  <div style="text-align: center; margin-bottom: 40px;">
    <%= form_tag books_path, method: :get do %>
      <%= text_field_tag :query, params[:query], placeholder: "Search for a book...",
            style: "padding: 10px; width: 300px; border-radius: 5px; border: 1px solid #ccc;",
            aria: { label: "Search for a book" } %>
      <%= submit_tag "Search",
            style: "padding: 10px 20px; background-color: rgb(67, 8, 8); color: white; border: none; border-radius: 5px; cursor: pointer;" %>
    <% end %>
  </div>

  <% if @books.any? %>
    <h2 style="text-align: center; margin-bottom: 30px;">Results for "<%= params[:query] %>"</h2>

    <% @books.each do |book| %>
      <% work_key = book["key"] %>

      <%= link_to book_path(
        id: work_key,
        title: book["title"],
        author: book["author_name"]&.first,
        year: book["first_publish_year"],
        category: book["subject"]&.first
      ), style: "text-decoration: none; color: inherit;" do %>

        <div style="display: flex; align-items: center; margin-bottom: 30px; border-bottom: 1px solid #eee; padding-bottom: 15px;">
          <% if book["cover_i"] %>
            <%= image_tag OpenLibraryService.new.book_cover_url(book["cover_i"]), alt: "Cover image of #{book["title"]}", style: "height: 120px; margin-right: 20px; border-radius: 6px;" %>
          <% else %>
            <div style="height: 120px; width: 80px; background-color: #f2f2f2; margin-right: 20px; display: flex; align-items: center; justify-content: center; border-radius: 6px; color: #999; font-size: 14px;">
              No cover
            </div>
          <% end %>

          <div>
            <h4 style="margin: 0 0 5px 0; font-weight: 600; color: #2c2c2c;"><%= book["title"] %></h4>
            <% if book["author_name"] %>
              <p style="margin: 0; color: #555; font-size: 14px;">By <%= book["author_name"].join(", ") %></p>
            <% end %>

            <% if book["first_publish_year"] %>
              <p style="margin: 0; color: #777; font-size: 13px;">Published: <%= book["first_publish_year"] %></p>
            <% end %>
          </div>
        </div>

      <% end %>
    <% end %>

  <% elsif params[:query].present? %>
    <p style="text-align: center; color: #777; font-style: italic;">No results found for "<%= params[:query] %>".</p>
  <% end %>

</div>
