<!DOCTYPE html>
<html>
  <head>
    <title>BookLoop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% unless devise_controller? || (controller_name == 'pages' && action_name == 'splash') %>
      <div data-controller="sidebar">
        <%= render "shared/navbar" %>
        <%= render "shared/sidebar" %>
      </div>
    <% else %>
      <%= yield %>
    <% end %>

    <% if flash[:notice].present? || flash[:alert].present? %>
      <div style="
        background-color: <%= flash[:notice] ? '#e9f9ef' : '#fbeaea' %>;
        color: <%= flash[:notice] ? '#1f6b3a' : '#862221' %>;
        border: 1px solid <%= flash[:notice] ? '#c5ebd6' : '#f1c0c0' %>;
        padding: 15px 20px;
        margin: 20px auto;
        max-width: 600px;
        border-radius: 8px;
        font-family: 'Helvetica Neue', sans-serif;
        text-align: center;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
      ">
        <%= flash[:notice] || flash[:alert] %>
      </div>
    <% end %>

    <%= yield %>

    <%= javascript_include_tag "controllers", type: "module" %>
  </body>
</html>
