<div id="sidebar" class="sidebar">
  <div class="sidebar-header">
    <span class="close-btn" id="close-sidebar">&times;</span>
    <h3>Welcome, <%= current_user.name.presence || "book_nerd" %>!</h3>
  </div>

  <ul class="sidebar-links">
    <li><%= link_to "Profile", "#" %></li>
    <li><%= link_to "Catalog", books_path %></li>
    <li><%= link_to "Friends", "#" %></li> <!-- Update this path when friends feature is added -->
    <li><%= link_to "My Books", mybooks_path %></li>
    <li><%= link_to "My Wishlist", wishlist_path %></li>
    <li><%= link_to "Sign out", destroy_user_session_path, method: :delete, data: { turbo: false } %></li>
  </ul>
</div>

<style>
  .sidebar {
    height: 100%;
    width: 0;
    position: fixed;
    top: 0; left: 0;
    background-color: #fff;
    overflow-x: hidden;
    transition: 0.3s;
    z-index: 1000;
    box-shadow: 2px 0 5px rgba(0,0,0,0.2);
    padding-top: 60px;
  }

  .sidebar.open {
    width: 250px;
  }

  .sidebar-header {
    position: absolute;
    top: 10px;
    left: 15px;
  }

  .close-btn {
    font-size: 30px;
    cursor: pointer;
    color: #7B1E3A;
  }

  .sidebar-links {
    list-style: none;
    padding: 100px 20px 20px;
  }

  .sidebar-links li {
    padding: 10px 0;
    border-bottom: 1px solid #eee;
  }

  .sidebar-links a {
    text-decoration: none;
    color: #7B1E3A; /* ðŸ’¥ grenat */
    font-weight: bold;
  }

  .sidebar-header h3 {
    font-size: 1.1rem;
    margin: 0;
    color: #7B1E3A; /* ðŸ’¥ grenat */
  }
</style>
