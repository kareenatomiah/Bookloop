<div style="max-width: 800px; margin: 50px auto; font-family: 'Helvetica Neue', sans-serif;">
  <h1 style="color: #862221; text-align: left; margin-bottom: 30px;">Categories</h1>

  <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(180px, 1fr)); gap: 20px;">
    <% @categories.each do |category| %>
      <%= link_to category_path(category.category), style: "text-decoration: none;" do %>
        <div style="position: relative; border-radius: 15px; overflow: hidden; box-shadow: 0 4px 10px rgba(0,0,0,0.1);">
          <img src="<%= category_image(category.category) %>" alt="<%= category.category %>"
               style="width: 100%; height: 150px; object-fit: cover;">
          <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;
                      background: rgba(0, 0, 0, 0.4); display: flex; align-items: center;
                      justify-content: center;">
            <h2 style="color: white; font-size: 20px; text-align: center;"><%= category.category %></h2>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
