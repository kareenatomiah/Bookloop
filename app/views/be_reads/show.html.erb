<h1 style="
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 2rem auto 1rem auto;
  padding: 8px 16px;
  font-size: 1.8rem;
  font-weight: 600;
  color: #7B1E3A;
  font-family: 'Merriweather', serif;
  background-color: #f7e9e9;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(123, 30, 58, 0.15);
  width: fit-content;
">
  <i class="fa-solid fa-book-open-reader" style="
    color: #7B1E3A;
    font-size: 1.3rem;
    margin-right: 8px;
    background-color: #fff0f2;
    padding: 4px 6px;
    border-radius: 4px;
  "></i>
  Your BeRead
</h1>


<div style="margin-bottom: 20px;">
  <strong>Text:</strong>
  <p style="font-size: 18px; line-height: 1.4; margin-top: 8px; white-space: pre-wrap;">
    <%= @be_read.text %>
  </p>
</div>

<% if @be_read.selfie.attached? %>
  <div style="margin-bottom: 20px;">
    <strong>Selfie:</strong><br>
    <%= image_tag @be_read.selfie.variant(resize_to_limit: [600, 600]), style: "max-width: 100%; border-radius: 12px;" %>
  </div>
<% end %>

<%= link_to 'Back', root_path, class: "btn btn-secondary" %>
