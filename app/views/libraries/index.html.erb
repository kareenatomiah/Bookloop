<% if @my_books.any? %>
  <% @my_books.each do |library| %>
    <% work_key = library.work_key %>
    <% if @book_data[work_key] %>
      <%= render partial: "books/book_preview", locals: {
        work_data: @book_data[work_key][:work_data],
        full_author: @book_data[work_key][:full_author],
        reviews: @book_data[work_key][:reviews],
        local_metadata: @book_data[work_key][:local_metadata],
        work_key: work_key
      } %>
    <% end %>
  <% end %>
<% else %>
  <p style="text-align: center; color: #888;">Your library is empty.</p>
<% end %>
